<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.uja.ejemplostema4">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NetworkActivity"
            android:label="@string/app_networking"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".WeatherActivity"
            android:label="@string/app_service_weather"
            android:theme="@style/AppTheme" />
        <activity android:name=".BasicServiceActivity" />

        <service
            android:name=".WeatherService"
            android:label="@string/service_weather_label" />

        <service
            android:name=".ServiceFTP"
            android:enabled="true"
            android:exported="true" />

        <receiver
            android:name=".ActivateWeather"
            android:enabled="true"
            android:exported="true">
            <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>
    </application>

</manifest>